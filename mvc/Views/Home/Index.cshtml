                    </div>
                    <input type="submit" name="submit" class="btn btn-danger btn-lg" value="Send Message">
                </form>
                <script>
                               function validate(form){
                                    fail = validateName(form.name.value)
                                    if(fail == "") {
                                        alert "No Username was Entered";
                                    return "";
                                    }
                </script>
            </div><!--end-col-->
        </div>
    </div>
</section>
